<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#2E2E38"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">
                <RelativeLayout

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.skyfishjy.library.RippleBackground

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/content"
                        app:rb_color="#E8138DFA"
                        app:rb_radius="32dp"
                        app:rb_rippleAmount="2"
                        app:rb_duration="3000"
                        app:rb_scale="2.5">
                        <ImageView
                            android:layout_margin="40dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:id="@+id/centerImage"
                            android:src="@drawable/cirlce"
                            />


                    </com.skyfishjy.library.RippleBackground>


                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">
                    <ImageButton

                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"

                        android:layout_width="50dp"
                        android:layout_height="50dp"


                        android:background="@drawable/ic_add_circle_black_24dp"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Lakshadweep"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        app:fontFamily="@font/montserrat"
                        android:layout_marginRight="20dp"/>
"
                        />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Active"
                        android:fontFamily="@font/montserrat"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#FFC107"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="1230"
                        android:fontFamily="@font/montserrat"
                        android:textSize="18.8sp"
                        android:gravity="center"
                        android:textColor="#FFC107"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Recovered"
                        android:fontFamily="@font/montserrat"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="#2CFF07"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="1230"
                        android:fontFamily="@font/montserrat"
                        android:textSize="18.8sp"
                        android:gravity="center"
                        android:textColor="#2CFF07"
                        />

                </LinearLayout> <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Deaths"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FF0724"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="1230"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18.8sp"
                    android:gravity="center"
                    android:textColor="#FF0724"
                    />

            </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statesRecycler"
                android:layout_width="350dp"
                android:layout_height="match_parent"

                android:layout_gravity="center"

                android:orientation="vertical"
               />
        </LinearLayout>
    </LinearLayout>
