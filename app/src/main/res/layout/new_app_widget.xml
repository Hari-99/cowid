<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="250dp"
    android:layout_width="match_parent">




<LinearLayout

    android:id="@+id/widgetLayout"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"

        android:backgroundTint="#00FFFFFF"
        >
        <ImageView

            android:background="#1565C0"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/wcowid"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/widget_background"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45">
                <TextView
                    android:gravity="center"
                    android:id="@+id/wstate"

                    android:fontFamily="@font/montserrat"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="25.5sp"
                    android:text=""
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Active"
                            android:textSize="13sp"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="#1985C5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView

                            android:id="@+id/wactive"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#ffff"
                            android:textSize="15sp"

                            app:fontFamily="@font/roboto_medium" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|bottom"
                            android:text="Recovered"
                            android:textColor="#1985C5"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView

                            android:fontFamily="@font/montserrat"

                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/wrecovered"
                            android:text=""
                            android:textColor="#ffff"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto"
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Deaths"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="#1985C5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView

                            android:fontFamily="@font/montserrat"

                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/wdeaths"
                            android:text=""
                            android:textColor="#ffff"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            >

           <RelativeLayout

               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:layout_width="90dp"
               android:layout_height="90dp"
               android:background="@drawable/widget_circle">
               <TextView

                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/wconfirm"
                   android:gravity="center"
                   android:textColor="#ffff"
                   android:fontFamily="@font/roboto"
                   android:textSize="17dp"
                   android:text=""
                    android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.005"/>

</LinearLayout>


</RelativeLayout>